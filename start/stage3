# Set in stage2:
# ---------------------------------------------------------
# set -e +a +m +s +i -f
# isFirstRun
# VAR_*
# All functions in /start/functions

extraConfig="$(configFromVarGroup param | awk '{print "--"$0}')"
if [ "$isFirstRun" == "true" ]
then
   tryMakeFile "$VAR_param_socket" write
   if [ ! -s "$VAR_param_datadir/mysql" ]
   then
      runCmd "/usr/bin/mysql_install_db --user=$VAR_LINUX_USER --datadir=$VAR_param_datadir"
      processInitdbDir
   fi
   tryDelete /initdb
fi
if [ "$(isInsecure)" == "true" ]
then
   printSecurityWarning
fi
